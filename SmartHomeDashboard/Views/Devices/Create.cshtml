@model SmartHomeDashboard.Models.Device
@{
    ViewData["Title"] = "Add Device";
}

<section class="mb-4">
    <div class="d-flex align-items-center justify-content-between mb-2">
        <h1 class="h3 m-0">Add Device</h1>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    </div>
    <p class="text-secondary mb-3">Create a device with its IP and VLAN. You can disable it to exclude it from monitoring.</p>

    <div class="shd-card p-3">
        <form asp-controller="Devices" asp-action="Create" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">
                <div class="col-12 col-md-6">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Camera 1" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="col-12 col-md-6">
                    <label asp-for="IpAddress" class="form-label">IP address</label>
                    <input asp-for="IpAddress" class="form-control" placeholder="192.168.1.10" />
                    <span asp-validation-for="IpAddress" class="text-danger"></span>
                </div>

                <div class="col-12 col-md-6">
                    <label asp-for="Vlan" class="form-label">VLAN</label>
                    <input asp-for="Vlan" class="form-control" placeholder="IoT_VLAN_1" />
                    <span asp-validation-for="Vlan" class="text-danger"></span>
                </div>

                <div class="col-12 col-md-6 d-flex align-items-end">
                    <div class="form-check form-switch">
                        <input class="form-check-input" asp-for="Enabled" />
                        <label class="form-check-label" asp-for="Enabled">Enabled</label>
                    </div>
                </div>
            </div>

            <div class="mt-4 d-flex gap-2">
                <button type="submit" class="btn btn-primary">Save Device</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
